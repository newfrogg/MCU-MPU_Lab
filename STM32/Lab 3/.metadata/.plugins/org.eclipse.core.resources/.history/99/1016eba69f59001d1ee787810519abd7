#include "button.h"
#include "main.h"
int KeyReg0 = NORMAL_STATE;
int KeyReg1 = NORMAL_STATE;
int KeyReg2 = NORMAL_STATE;

int TimeOutForKeyPress = 200;

void subKeyProcess() {
	KeyReg0 = KeyReg1;
	KeyReg1 = KeyReg2;
	KeyReg2 = HAL_GPIO_ReadPin(, GPIO_Pin)
}
void getKeyInput() {
	KeyReg2 = KeyReg1;
	KeyReg1 = KeyReg0;
	KeyReg0 = HAL_GPIO_ReadPin(Button_GPIO_Port, Button_Pin);
	if ((KeyReg1 == KeyReg0) && (KeyReg1 == KeyReg2)) {
		if (KeyReg2 != KeyReg3) {
			KeyReg3 = KeyReg2;

			if (KeyReg3 == PRESSED_STATE) {
				TimeOutForKeyPress = 300;
				subKeyProcess();
			}
		} else {
			TimeOutForKeyPress--;
			if (TimeOutForKeyPress == 0) {
				KeyReg3 = NORMAL_STATE;
			}
		}
	}
}

